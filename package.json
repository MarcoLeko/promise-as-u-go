{
  "name": "@lekoma/promise-as-u-go",
  "version": "1.0.0",
  "description": "Library that combines the concept of promises with the Go-inspired approach",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist/*",
    "package.json"
  ],
  "scripts": {
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "jest": "jest",
    "build": "rm -rf dist && tsc -p tsconfig.build.json",
    "test": "npm run jest",
    "prepare": "husky",
    "prepublishOnly": "npm run build"
  },
  "lint-staged": {
    "*.{ts,yaml,yml,json}": [
      "npm run lint:fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MarcoLeko/promise-as-u-goe"
  },
  "keywords": [
    "promise",
    "go"
  ],
  "author": "Marco Leko",
  "license": "Apache-2.0",
  "devDependencies": {
    "@swc/helpers": "^0.5.15",
    "@swc/jest": " 0.2.37",
    "@types/jest": "29.5.12",
    "@types/node": "^22.10.1",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "8.57.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "husky": "9.0.11",
    "jest": "29.7.0",
    "lint-staged": "15.2.2",
    "typescript": "^5.7.2"
  },
  "peerDependencies": {
    "typescript": "5.x"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "dependencies": {
    "tslib": "^2.8.1"
  }
}
